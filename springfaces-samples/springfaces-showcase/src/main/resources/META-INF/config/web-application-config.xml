<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jsf="http://www.springframework.org/schema/springfaces"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/springfaces
		http://www.springframework.org/schema/springfaces/springfaces.xsd">

	<jsf:integration/>

	<!-- 
	
	<jsf:mvc-conversion-service name=""/>
	
	-->
	
	<bean id="conversionService"
		class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<property name="converters">
			<list>
				<bean name="genericFacesConverter"
					class="org.springframework.springfaces.mvc.converter.GenericFacesConverter" />
			</list>
		</property>
	</bean>
	
	<!-- 
	
	<faces:mvc dispatcher="ref" state-handler="ref" exception-handlers=true>
		<faces:view-resolver enabled="" prefix="" suffix="" order=""/>
		<faces:destination-view-resolves>
			bean or ref s
		<faces:destination-view-resolves>
		<faces:navigation-outcome-resolvers>
			bean or ref s
		</faces:navigation-outcome-resolvers>
	</faces:mvc>
	 -->

	<bean name="defaultDispatcher" class="org.springframework.springfaces.mvc.servlet.DefaultDispatcher" />
	
	<bean name="postbackHandler"
		class="org.springframework.springfaces.mvc.servlet.FacesPostbackHandler">
		<constructor-arg ref="stateHandler" />
		<constructor-arg ref="defaultDispatcher" />
	</bean>

	<mvc:interceptors>
		<bean name="facesInterceptor"
			class="org.springframework.springfaces.mvc.servlet.FacesHandlerInterceptor" />
	</mvc:interceptors>
	
	<bean
		class="org.springframework.springfaces.mvc.servlet.SpringFacesFactories">
		<constructor-arg ref="stateHandler" />
		<constructor-arg ref="destinationViewResolverChain" />
		<property name="navigationOutcomeResolver" ref="navigationOutcomeResolver" />
	</bean>
	
	<bean name="stateHandler"
		class="org.springframework.springfaces.mvc.render.ClientFacesViewStateHandler" />
	
	<bean name="destinationViewResolverChain"
		class="org.springframework.springfaces.mvc.navigation.DestinationViewResolverChain">
		<property name="resolvers">
			<list>
				<ref bean="requestMappedDestinationViewResolver" />
				<ref bean="defaultDestinationViewResolver" />
			</list>
		</property>
	</bean>
	
	<bean name="requestMappedDestinationViewResolver"
		class="org.springframework.springfaces.mvc.navigation.requestmapped.RequestMappedRedirectDestinationViewResolver" />
	
	<bean name="defaultDestinationViewResolver"
		class="org.springframework.springfaces.mvc.servlet.DefaultDestinationViewResolver">
		<constructor-arg ref="defaultDispatcher" /> <!-- FIXME how to inject this when on namespace, perhaps DispatcherAware? -->
	</bean>
	
	<bean name="navigationOutcomeResolver"
		class="org.springframework.springfaces.mvc.navigation.NavigationOutcomeResolverChain">
		<property name="resolvers">
			<list>
				<bean
					class="org.springframework.springfaces.mvc.navigation.ImplicitNavigationOutcomeResolver" />
				<bean
					class="org.springframework.springfaces.mvc.navigation.annotation.NavigationMethodOutcomeResolver" />
			</list>
		</property>
	</bean>
	
	<bean
		class="org.springframework.springfaces.mvc.exceptionhandler.DispatcherExceptionHandler">
		<constructor-arg ref="defaultDispatcher" />
	</bean>
	
	<bean id="facesViewResolver"
		class="org.springframework.springfaces.mvc.servlet.view.BookmarkableRedirectViewIdResolver">
		<property name="viewClass"
			value="org.springframework.springfaces.mvc.servlet.view.FacesView" />
		<property name="prefix" value="/WEB-INF/pages/" />
		<property name="suffix" value=".xhtml" />
		<property name="order" value="100" />
	</bean>

	<!-- faces:resources -->

	<bean id="facesResourceHandler"
		class="org.springframework.springfaces.mvc.servlet.FacesResourceRequestHandler" />
	<bean id="facesResourceMapper"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="urlMap">
			<map>
				<entry key="/javax.faces.resource/**" value="facesResourceHandler" />
			</map>
		</property>
		<property name="order" value="99" />
	</bean>
	
	<!-- standard spring -->

	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>WEB-INF/messages</value>
			</list>
		</property>
	</bean>

	<mvc:annotation-driven conversion-service="conversionService"/>

	<context:component-scan base-package="org.springframework.springfaces.showcase">
		<context:exclude-filter type="annotation"
			expression="org.springframework.stereotype.Repository" />
	</context:component-scan>

	<!-- FIXME -->
	
	<bean id="objectMessageSource"
		class="org.springframework.springfaces.message.DefaultObjectMessageSource">
		<constructor-arg>
			<ref bean="messageSource" />
		</constructor-arg>
	</bean>




</beans>